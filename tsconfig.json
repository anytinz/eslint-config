{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    /* Module */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./",
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "noEmit": true,
    "newLine": "lf",
    /* Interop Constraints */
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Output Formatting */
    "noErrorTruncation": true
  },
  "include": [
    "./scripts",
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
